<section class="container d-flex flex-column justify-content-center align-items-center my-5" id="login">
  <h1>Área de login</h1>
  <br>
  <form action="/auth/login" method="POST">
    <div>
      <label for="username">Nome de usuário</label><br>
      <input type="text" name="username" class="form-control-lg">
    </div>
    <br>
    <div>
      <label for="password">Senha</label><br>
      <input type="password" name="password" class="form-control-lg">
    </div>
    <br>
    <div>
      <button type="submit" class="btn btn-primary">Entrar</button>
    </div>
  </form>
  <br><br>
  <p class="account-message">
    Não tem um cadastro?
    <a href="/auth/signup">Cadastre-se</a>
  </p>
</section>