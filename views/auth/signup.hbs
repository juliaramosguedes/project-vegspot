<section class="container d-flex flex-column justify-content-center align-items-center" id="signup">
  <h1>Cadastre-se</h1>
  <br>
  <form action="/auth/signup" method="POST" id="form-container">
    <label for="username">Nome de usuário</label><br>
    <input id="username" type="text" name="username" class="form-control-lg">
    <br><br>
    <label for="password">Senha</label><br>
    <input id="password" type="password" name="password" class="form-control-lg">
      <br><br>
    <label for="name">Nome completo</label><br>
    <input id="name" type="text" name="name" class="form-control-lg">
      <br><br>
    <label for="email">E-mail</label><br>
    <input id="email" type="email" name="email" class="form-control-lg">
      <br><br>
    <label for="category">Alimentação</label><br>
    <select name="category" id="category" class="form-control-lg">
      <option value="Vegan" selected>Vegan</option>
      <option value="Vegetariano">Vegetariano</option>
      <option value="Vegan-Friendly">Vegan-Friendly</option>
    </select>
    <br>
    {{#if message}}
      <div class="error-message">{{ message }}</div>
    {{/if}}
    <br>
    <button type="submit" class="btn btn-primary">Criar conta</button>
  </form>
  <br><br>
  <p class="account-message">
    Já tem um cadastro?
    <a href="/auth/login">Entrar</a>
  </p>
</section>