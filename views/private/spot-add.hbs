 <h2>Procura um lugar</h2>
  Local: <input type="text" name="fname" id="addLocalSearch">
  <button id="addLocalButton">Procurar</button>
  <div id="formatted-address">endereco novo</div>
 <div id="map"></div>
 
<section class="container d-flex flex-column justify-content-center align-items-center" id="add-spot">
  <h1>Cadastro de locais</h1>
  <br>
  <form action="/spot/add" method="POST" id="form-container">
    <label for="name">Nome do local</label><br>
    <input id="name" type="text" name="name" class="form-control-lg">
    <br><br>
    <label for="telefone">Telefone</label><br>
    <input id="telefone" type="text" name="phone" class="form-control-lg">
      <br><br>
    <label for="Endereço">Endereço</label><br>
    <input id="Endereço" type="text" name="address" class="form-control-lg">
      <br><br>
    <label for="vegCategory">Categoria</label><br>
    <select name="vegCategory" id="vegCategory" class="form-control-lg">
      <option value="Vegan" selected>Vegan</option>
      <option value="Vegetariano">Vegetariano</option>
      <option value="Vegan-Friendly">Vegan-Friendly</option>
    </select>
    <br><br>
    <label for="spotCategory">Tipo de local</label><br>
    <select name="spotCategory" id="spotCategory" class="form-control-lg">
      <option value="Restaurante" selected>Restaurante</option>
      <option value="Loja">Loja</option>
    </select>
    <br><br>
    <label for="weekday">Horário de funcionamento</label><br>
    <textarea name="weekday" id="weekday" cols="50" rows="5"></textarea>
      <br><br>
    <label for="price">Preço</label><br>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="price" value="1">
      <label class="form-check-label" for="price1">1</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="price" value="2">
      <label class="form-check-label" for="price2">2</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="price" value="3">
      <label class="form-check-label" for="price3">3</label>
    </div>
      <br><br>
    <label for="rating">Avaliação</label><br>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="rating" value="1">
      <label class="form-check-label" for="rating1">1</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="rating" value="2">
      <label class="form-check-label" for="rating2">2</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="rating" value="3">
      <label class="form-check-label" for="rating3">3</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="rating" value="4">
      <label class="form-check-label" for="rating4">4</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="rating" value="5">
      <label class="form-check-label" for="rating5">5</label>
    </div>
      <br><br>
    <label for="description">Descrição</label><br>
    <textarea name="description" id="description" cols="50" rows="5"></textarea>
      <br><br>
    <label for="Foto">Url da foto</label><br>
    <input id="Foto" type="text" name="photos" class="form-control-lg">
      <br><br>
    {{#if message}}
      <div class="error-message">{{ message }}</div>
    {{/if}}
    <br>
    <button type="submit" class="btn btn-primary">Cadastrar local</button>
  </form>
</section>

  <!-- JavaScript -->
  <script src="/javascripts/add.js"></script>

