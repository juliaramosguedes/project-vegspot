<div class="blue d-flex flex-wrap justify-content-around">
  <div class="order-1 order-md-0 col-10 col-md-7">
    <h1 class="text-white">{{this.name}} - {{this.rating}}</h1>
    <h2 class="text-white">{{this.vegCategory}}</h2>
    <h2 class="text-white">{{this.spotCategory}}</h2>
  </div>
  <div class="order-0 order-md-1 col-10 col-md-3">
    <a href="/spot/edit/{{_id}}" class="text-white">Editar</a>
  </div>
</div>
<div class="d-flex flex-wrap justify-content-around">
  <div class="order-1 order-md-0 col-10 col-md-7 d-flex flex-wrap">
    <p class="col-10 col-md-5">{{this.address}}</p>
    <p class="col-10 col-md-5">{{this.phone}}</p>
    <p class="col-10 col-md-5">{{this.description}}</p>
  </div>
  <div id="map" class="order-0 order-md-1 col-10 col-md-3"></div>
</div>
<div id="carouselPhotosSpot" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselPhotosSpot" data-slide-to="0" class="active"></li>
    <li data-target="#carouselPhotosSpot" data-slide-to="1"></li>
    <li data-target="#carouselPhotosSpot" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      {{#each photos }}
      <img class="d-block w-100" src="{{this.photos}}" alt="First slide">
      {{/each}}
    </div>
